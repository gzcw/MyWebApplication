@{
    Layout = "~/Views/Shared/_BaseLayout.cshtml";
}
<table id="attachmentTable" style="width: 100%; height: 100%; min-height:100%"></table>

<style>
    html, body {
        height: 95%;
    }
</style>
<script>
    var me = this;
    $(document).ready(function () {
        initParams();
        initAttachment();
    });
    function initParams() {
        var params = pageCommonJS.getUrlParams();
        $.extend(me, params);
    }

    var permissionBtn = 'addFujian,remove,refresh';
    if (me.permission == 0) {
        permissionBtn = "refresh";
    }

    function initAttachment() {
        $("#attachmentTable").fujiangrid({
            recordID: me.recordId,
            permissionBtn: permissionBtn,
            loadUrl: '@Url.Action("GetAttachmentList", "Attachment")'
        });
    }
</script>
