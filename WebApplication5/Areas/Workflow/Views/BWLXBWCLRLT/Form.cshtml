<div class="toolbar panel-header">
    <a href="#" class="easyui-linkbutton" data-options="iconCls: 'icon-add'" plain="true" onclick="save()">保存</a>
    <a href="#" class="easyui-linkbutton" data-options="iconCls: 'icon-edit'" plain="true" onclick="reset()">重置</a>
    <a href="#" class="easyui-linkbutton" data-options="iconCls: 'icon-remove'" plain="true" onclick="cancel()">取消</a>
</div>

<form id="BWLXBWCLRLT_form" class="myform" method="post">
    <fieldset>
        <legend>办文材料</legend>
        <table cellpadding="0" cellspacing="0" style="width: 100%" class="mytable">
            <tr style="display:none">
                <td>
                    <input type="hidden" name="ID" />
                    <input type="hidden" name="BWLXMC" />
                    <input type="hidden" name="CLMC" />
                    <input type="hidden" name="ISCONFIG" />
                    <input type="hidden" name="DATAORIGIN" />
                </td>
            </tr>
            <tr>
                <th width="140">办文类型：</th>
                <td width="210">
                    <input class="easyui-combobox" name="BWLXID" data-options="valueField: 'ID',textField: 'BWLXMC',url:'@Url.Action("GetData", "BWLX")'" />
                </td>
                <th width="140">办文材料：</th>
                <td width="210">
                    <input name="BWCLID" />
                </td>
            </tr>
            <tr>
                <th>材料页数：</th>
                <td>
                    <input id="CLYS" class="easyui-numberbox" name="CLYS" />
                </td>
                <th>收件数量</th>
                <td><input id="CLYS" class="easyui-numberbox" name="SJSL" /></td>
            </tr>
            <tr>
                <th>排序号：</th>
                <td>
                    <input class="easyui-numberbox" name="SORTORDER" />
                </td>
                <th></th>
                <td></td>
            </tr>

        </table>
    </fieldset>
</form>

<script>
    var me = this;
    var myform = $('#BWLXBWCLRLT_form');

    $(document).ready(function () {
        initForm();

        if (me.formId) {
            $.messager.progress();
            loadForm();
        }
        else if (me.defaultValues) {
            myform.form('load', me.defaultValues);
        }

        if (me.Personalize && typeof (me.Personalize) == "function") {
            Personalize();
        }
    });
    //region个性化代码

    //endregion

    //初始化表单
    function initForm() {
        myform.form({
            onLoadSuccess: function (data) {
                $.messager.progress('close');
            }
            //buttons: [{
            //    iconCls: 'icon-add',
            //    text: '保存',
            //    handler: save
            //}, '-', {
            //    iconCls: 'icon-edit',
            //    text: '重置',
            //    handler: reset
            //}, '-', {
            //    iconCls: 'icon-remove',
            //    text: '取消',
            //    handler: cancel
            //}]
        });
        $("input[name=BWCLID]").selectwindow({
            url: '@Url.Action("GetData", "BWCL")',
            valueField: 'ID',
            textField: 'CLMC',
            required: true,
            editable: false,
            windowConfig: {
                url: '@Url.Action("Index", "BWCL")',
                title: '选择办文材料'
            },
            onSelect: function (record) {
                $("#YJFS").numberbox('setValue', record.YJFS);
                $("#FYJFS").numberbox('setValue', record.FYJFS);
                $("#CLYS").numberbox('setValue', record.CLYS);
            }
        });
    }

    //加载表单
    function loadForm() {
        myform.form('load', '@Url.Action("LoadForm","BWLXBWCLRLT")/' + me.formId);
    }

    //保存
    function save() {
        $.messager.progress();
        myform.form('submit', {
            url: '@Url.Action("Save","BWLXBWCLRLT")',
            onSubmit: function () {
                var isValid = myform.form('validate');
                flag = isValid;
                if (!isValid) {
                    $.messager.progress('close');
                    $.messager.alert("提示", "表单未正确填写，请检查");
                }
                return isValid;
            },
            success: function (result) {
                $.messager.progress('close');
                if (result.success) {
                    if (me.parentGrid) {
                        me.parentGrid.datagrid('reload');
                    }
                    me.easyWindow.window('close');
                }
            }
        })
    }
    //重置
    function reset() {
        if (me.formId) {
            loadForm();
            return;
        }
        myform.form('reset');
        if (me.defaultValues) {
            myform.form('load', me.defaultValues);
        }
    }
    //取消
    function cancel() {
        me.easyWindow.window('close');
    }
</script>
